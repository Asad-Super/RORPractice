<h1>Listing all students</h1>

<table>

  <thead>
  <tr>
    <th>First Name</th>
    <th>LastName</th>
    <th>Email</th>
  </tr>
  </thead>

  <tbody>
  <% @students.each do|student| %>
    <tr>
    <td><%= student.first_name %></td>
      <td><%= student.last_name %></td>
      <td><%= student.email %></td>
      <td><%= link_to "View",student %></td>
      <td><%= link_to "Edit", edit_student_path(student) %></td>
      <td><%= button_to "Delete",student, method: :delete, data: {confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>

  </tbody>

</table>